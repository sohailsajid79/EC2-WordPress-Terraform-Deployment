# Local .terraform directories
.terraform/

# Terraform plan files
*.tfplan

# Terraform state files
*.tfstate
*.tfstate.*

# Crash log files
crash.log

# Exclude any .terraform.lock.hcl files to manage provider versions
*.terraform.lock.hcl

# Exclude sensitive files (e.g., secret files)
*.pem
*.key

# Ignore backups of terraform files
*.tf.backup

# Ignore any local overrides files
override.tf
override.tf.json
*_override.tf
*_override.tf.json

# Ignore generated JSON plan output
plan.out

# Ignore command history file
.terraform_history
